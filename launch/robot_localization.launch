<!-- ======== ATTENTION! ======== -->
<!-- Data from dso_pose is kind of relative (it doesn't have an absolute scale). -->
<!-- So on currently step we can't directly fuse GPS and DSO-mono -->

<launch>
    <!-- ======== DSO PART ======== -->
    <remap from="image" to="front_right_view"/>

    <node pkg="dso_ros" type="dso_live" name="dso_live" 
          args="calib=$(find dso_ros)/src/calibCameraDSO.txt nolog=1" 
          output="screen" />

    <node pkg="rviz" type="rviz" name="rviz" 
          args="$(find dso_ros)/launch/niias-loko.rviz"/>

    <!-- ======== ROBOT_LOCALIZATION PART ======== -->
